<div class="container">
    <div class="row">
        <div class="Panel">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        Giriş Paneli
                    </div>
                </div>

                <div class="panel-body">
                    <form action="/login" method="POST">
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="username" type="text" name="username" class="form-control" placeholder="Kullanıcı Adı">
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="password" type="password" name="password" class="form-control" placeholder="Parola">
                        </div>
                        <div class="pull-right">
                            <input type="submit" class="btn btn-primary" value="Giriş">
                            <a href="/signup" class="btn btn-default">Kayıt Ol</a>
                        </div>
                    </form>
                </div>
                <!--
                <div class="panel-footer clearfix">
                    <% if (typeof username!="undefined") {%>
                        <h2><%=username%></h2>
                    <%}%>
                </div>
                -->
            </div> 
        </div> 
    </div>
</div>